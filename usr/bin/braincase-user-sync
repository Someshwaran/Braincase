#!/usr/bin/ruby

# TODO: admin only!

require 'digest/md5'
require 'logger'

logfile = "/var/log/braincase/usersync.log"
log = Logger.new( logfile, "weekly" )
log.level = Logger::INFO

userfile="/var/lib/dokuwiki/acl/users.auth.php"
hashfile="/var/lib/braincase/users.hash"
new_hash = Digest::MD5.hexdigest(File.read(userfile))

# check for a change
if File.read(hashfile) == new_hash
  exit # no change, exit
else
  File.open(hashfile, 'w'){|f| f.write(new_hash)} # changed write new hash to disk
  log.info "The user file changed"
end

# Get all the lines from the userfile
lines=`cat #{userfile} | grep -vP '^#|^\s'`.split("\n")

log.info "#{lines.count} users in the userfile"

# Run through each user and create ones that are missing
lines.each do |line|
  user = line.split(":")[0]
  if `user-exists #{user}; echo $?`.chomp == "1"
    system "braincase-create-user #{user}"
    # TODO: postcondition
    log.info "Created #{user} in system"
  end
end